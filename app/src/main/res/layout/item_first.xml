<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <View
            android:background="@drawable/shadow"
            android:layout_width="0dp"
            android:layout_height="300dp" android:id="@+id/item_view"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_title_tv" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/ic_left_quote2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/item_quote_iv"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/item_view" app:layout_constraintStart_toStartOf="@+id/item_view"
            android:layout_marginStart="32dp"/>
    <com.rengwuxian.materialedittext.MaterialEditText

            style="@style/SentenceEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:ems="10"
            android:id="@+id/item_input_et"
            app:layout_constraintTop_toTopOf="@+id/item_view"
            app:layout_constraintBottom_toBottomOf="@+id/item_view"
            app:layout_constraintEnd_toEndOf="@+id/item_view" app:layout_constraintStart_toStartOf="@+id/item_view"
            android:textAlignment="center" android:layout_marginTop="8dp"/>
    <TextView
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title_tv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:textSize="16dp"/>
</android.support.constraint.ConstraintLayout>