<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#EDEDED</item>
        <item name="colorAccent">#2c2c2c</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--타이틀-->
    <style name="TitleText">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--타이틀 아래의 문장-->
    <style name="TitleUnder">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#909090</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--서브타이틀-->
    <style name="Subtitle">
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">#909090</item>
    </style>

    <!--EditText-->
    <style name="SentenceEditText">
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="met_underlineColor">#EBEBEB</item>
        <item name="met_hideUnderline">true</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">5</item>
        <item name="android:maxLines">5</item>

    </style>

</resources>
